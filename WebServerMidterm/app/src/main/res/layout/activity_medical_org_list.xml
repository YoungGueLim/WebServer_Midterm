<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MedicalOrganization.MedicalOrg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:onClick="onClick"
            android:text="All"
            android:id="@+id/btn1_else"

            android:layout_below="@+id/btn1_derma"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:text="병원 / 대학교"
            android:onClick="onClick"
            android:id="@+id/btn1_head"

            android:layout_below="@+id/textView"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:text="한의원"
            android:id="@+id/btn_1_oriental"
            android:onClick="onClick"
            android:layout_below="@+id/btn1_head"
            android:layout_alignParentRight="true" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="피부과"
            android:id="@+id/btn1_derma"
            android:onClick="onClick"
            android:layout_below="@+id/btn1_dental"
            android:layout_alignParentRight="true" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="상세정보"
            android:onClick="onClick"
            android:id="@+id/btn1_detail"
            android:layout_below="@+id/btn1_else"
            android:layout_alignParentRight="true" />
    </TableLayout>
</RelativeLayout>
