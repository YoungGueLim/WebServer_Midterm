<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dudrb.weatherapitest.MainActivity">

    <Button
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:text="선도 의료   기관 (한글)"
        android:id="@+id/btn_city_1"
        android:layout_marginTop="52dp"
        android:onClick="onClick_main"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:text="선도 의료   기관(영어)"
        android:id="@+id/btn_2"
        android:layout_alignTop="@+id/btn_city_1"
        android:onClick="onClick_main"
        android:layout_toRightOf="@+id/btn_city_1"
        android:layout_toEndOf="@+id/btn_city_1"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:text="시티투어"
        android:id="@+id/btn_3"
        android:onClick="onClick_main"
        android:layout_below="@+id/btn_city_1"
        android:layout_alignLeft="@+id/btn_city_1"
        android:layout_alignStart="@+id/btn_city_1" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="날씨"
        android:onClick="onClick_main"
        android:id="@+id/btn_5"
        android:layout_below="@+id/btn_2"
        android:layout_alignLeft="@+id/btn_2"
        android:layout_alignStart="@+id/btn_2"
        android:layout_alignBottom="@+id/btn_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Medi-Tour"
        android:textSize="40dp" />
</RelativeLayout>
